{
    "version": "1.0.0",
    "configurations": [
        {
            "name": "program-name (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/location/of/project/binary",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/optional/path/to/subworkspace",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "location/of/debugger/binary",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}