{
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "window.zoomLevel": -1,
    "workbench.iconTheme": "vscode-icons",
    "workbench.panel.defaultLocation": "right",
    "workbench.view.alwaysShowHeaderActions": true,
    "editor.detectIndentation": true,
    "files.eol": "\n",
    "explorer.confirmDragAndDrop": false,
    "workbench.colorTheme": "Light++",
    "workbench.colorCustomizations": {
        "statusBar.background": "#4078a9",
        "activityBar.border": "#969ca0",
        "sideBar.border": "#969ca0",
        "panel.border": "#969ca0",
        "editorGroup.border": "#969ca0"
    },
    "workbench.startupEditor": "none",
    "terminal.integrated.fontFamily": "Droid Sans Mono Slashed for Powerline",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontWeight": "normal",
    "[Log]": {
        "editor.wordWrap": "on"
    },

    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    "python.pythonPath": "path-to/python",
    "python.linting.pylintArgs": [
        "--load-plugins", 
        "pylint_django"
    ],

    "C_Cpp.default.includePath": ["/usr/bin/"],

    "remote.extensionKind": {"alefragnani.project-manager": ["workspace"]},
    "projectManager.git.baseFolders": [
        "path-to/projects-folder"
    ],

    "vsicons.dontShowNewVersionMessage": true,

    "liveServer.settings.donotShowInfoMsg": true,

    "gitlens.hovers.currentLine.over": "line",
    "gitlens.currentLine.enabled": false,
    "gitlens.codeLens.scopes": [
        "document",
        "containers"
    ],
    "gitlens.statusBar.enabled": false,
    "gitlens.hovers.currentLine.enabled": false
}