    // Keybindings
    "actions": [
        // Copy and paste are bound to Ctrl+Shift+C and Ctrl+Shift+V in defaults.json
        // These two lines additionally bind them to Ctrl+C and Ctrl+V
        {
            "command": {
                "action": "copy",
                "singleLine": false
            },
            "keys": "ctrl+c"
        },
        {
            "command": "paste",
            "keys": "ctrl+v"
        },

        // Ctrl+Shift+F to open the search box
        {
            "command": "find",
            "keys": "ctrl+shift+f"
        },

        // Alt+Shift+D to open a new pane
        // "split": "auto" makes this pane open in the direction that provides the most surface area.
        // "splitMode": "duplicate" makes the new pane use the focused pane's profile.
        {
            "command": {
                "action": "splitPane",
                "split": "auto",
                "splitMode": "duplicate"
            },
            "keys": "alt+shift+d"
        }
    ]
}