{
  "$schema": "https://ohmyposh.dev/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [

        // Failure status code
        {
          "type": "status",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#383f78",
          "properties": {
            "success_symbol": "",
            "show_exit_code": false,
            "always_enabled": false
          }
        },

        // Elevated/root lightning indicator
        {
          "type": "root",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#383f78"
        },

        // user@host
        {
          "type": "session",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#383f78",
          "properties": {
            "display_user": true,
            "display_host": true
          }
        },

        // Python VirtualEnv
        {
          "type": "python",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#383f78",
          "properties": {
            "display_mode": "environment"
          }
        },

        // Path
        {
          "type": "path",
          "style": "powerline",
          "foreground": "#ffffff",
          "background": "#386f73",
          "powerline_symbol": "",
          "properties": {
            "style": "full"
          }
        },

        // Git
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#2a273f",
          "foreground_templates":
            ["{{ if and (gt .Ahead 0) (gt .Behind 0) }}#e0def4{{ end }}"],
          "background": "#b8bb26",
          "background_templates":
            [
              "{{ if or (.Working.Changed) (.Staging.Changed) }}#fabd2f{{ end }}",
              "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#cc241d{{ end }}",
              "{{ if gt .Ahead 0 }}#d3869b{{ end }}",
              "{{ if gt .Behind 0 }}#cc241d{{ end }}"
            ],
          "powerline_symbol": "",
          "properties":
            {
              "fetch_status": true,
              "fetch_upstream_icon": true,
              "branch_max_length": 25,
              "template": "[{{ .UpstreamIcon }} {{ .HEAD }}]({{ .UpstreamURL }}){{ .BranchStatus }}{{ if .Working.Changed }}{{ .Working.String }}{{ end }}{{ if .Staging.Changed }}{{ .Staging.String }}{{ end }}"
            }
        }
      ]
    }
  ]
}
